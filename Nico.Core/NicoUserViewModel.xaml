<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:beha="clr-namespace:TBird.Wpf.Behaviors;assembly=TBird.Wpf"
                    xmlns:mocore="clr-namespace:Moviewer.Core.Styles"
                    xmlns:nicore="clr-namespace:Moviewer.Nico.Core">

    <DataTemplate DataType="{x:Type nicore:NicoUserViewModel}">
        <StackPanel Style="{DynamicResource HorizontalStackPanel}">

            <Grid beha:FrameworkElementBehavior.Width="40"
                  beha:FrameworkElementBehavior.Height="40"
                  ToolTip="{Binding Userid}">
                <ContentPresenter ContentTemplate="{DynamicResource Core.Thumbnail}"
                                  Content="{Binding Thumbnail}" />
            </Grid>

            <mocore:LinkedTextBlock Margin="5,3"
                                    Command="{Binding OnClickUsername}"
                                    VerticalAlignment="Center"
                                    Text="{Binding Username}" />
            
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>