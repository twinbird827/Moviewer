<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Moviewer.Nico.Workspaces"
                    xmlns:beha="clr-namespace:TBird.Wpf.Behaviors;assembly=TBird.Wpf">

    <Style TargetType="ComboBox" BasedOn="{DynamicResource DefaultComboBox}">
        <Setter Property="Margin" Value="1" />
        <Setter Property="beha:FrameworkElementBehavior.Width" Value="150" />
    </Style>
    
    
    <DataTemplate DataType="{x:Type local:NicoRankingViewModel}">
        <DockPanel>

            <StackPanel DockPanel.Dock="Top"
                        Style="{DynamicResource HorizontalStackPanel}">

                <ComboBox ItemsSource="{Binding Genre.Items}"
                          SelectedItem="{Binding Genre.SelectedItem}" />

                <ComboBox ItemsSource="{Binding Period.Items}"
                          SelectedItem="{Binding Period.SelectedItem}" />
                
            </StackPanel>

            <ListBox Style="{StaticResource Core.VideoStyle}"
                     ItemsSource="{Binding Videos}"
                     ItemContainerStyle="{DynamicResource NicoVideoViewModel.ItemContainerStyle}" />

        </DockPanel>
    </DataTemplate>
    
</ResourceDictionary>